/* signup.module.css */

.width-wrapper {
    margin: 0 auto;
    max-width: 900px;
    min-width: 900px;
    padding-left: 10rem;
    margin-top: 10rem;
    display: flex;
    flex-direction: column;
    gap: 5rem;
}
.signup-heading {
    margin-bottom: 3rem;
}
.input-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: -1rem;
}

.input-label {
    margin-top: 1.5rem;
}

.label {
    font-size: 1.2rem;
    font-weight: bold;
}

.input-field {
    padding: 0.5rem;
    margin-bottom: 1.5rem;
}

.input-field input[type="email"],
.input-field input[type="password"] {
    width: 84%;
    padding: 0.5rem;
    border: none;
    border-bottom: 1px solid gray;
    outline: none;
    font-size: 1.5rem;
}
.check-icon {
    color: blue;
}
.submit-button {
    width: 85%;
    height: 4.5rem;
    margin-left: 0.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fc7300;
    border-radius: 5px;
    font-size: 2rem;
    font-weight: bold;
    color: #ffffff;
}

.submit-button:hover {
    background-color: #fa6305;
}
